---
interface Props {

    nombre: string;
    precio: string;
    imagen: string;
    url:string;

}

const { url,nombre, precio, imagen } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-md overflow-hidden transition-transform hover:scale-105 cursor-pointer">
    <img src={imagen} alt={nombre} class="w-full h-48 object-cover" />
    <div class="p-4">
        <h2 class="text-xl font-semibold text-gray-800">{nombre}</h2>
        <p class="text-lg text-gray-600 mb-4">{precio}</p>

        <a href={url} class="mt-4 bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors duration-300">
            Ver Detalles
        </a>
    </div>
</div>