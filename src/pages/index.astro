---
import '../styles/global.css'; // Tu CSS global con Tailwind
import { productos } from '../data/productos.js'; // Tus datos de productos
import ProductoCard from '../components/ProductoCard.astro'; // <--- Importa tu nuevo componente
import Footer from '../components/Footer.astro'; // Si ya tienes tu componente Footer

// Si esta es una página de listado, podrías no necesitar getStaticPaths aquí.
// Si es una plantilla de detalle de producto, el bucle iría en la página de listado.
---

<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Nuestros Productos | Toldos David Amigo</title>
</head>
<body class="min-h-screen flex flex-col bg-gradient-to-br from-teal-500 via-sky-400 to-blue-600 text-gray-900">
<main class="flex-grow p-6">
	<h1 class="text-5xl font-extrabold text-white text-center mb-10 drop-shadow-lg">Nuestros Productos</h1>

	<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 max-w-6xl mx-auto">
		{productos.map(producto => (
			<ProductoCard
				nombre={producto.nombre}
				precio={producto.precio}
				imagen={producto.imagen}
			/>
		))}
	</div>
</main>

<Footer />
</body>
</html>