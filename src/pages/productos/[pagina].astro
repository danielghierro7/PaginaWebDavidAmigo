---
import PaginaInicial from '../../components/PaginaInicial.astro';

const productos = [
    { id: 'toldo1', nombre: 'Toldo Clásico', precio: '150€', imagen: '/images/toldo1.jpg' },
    { id: 'toldo2', nombre: 'Toldo Premium', precio: '250€', imagen: '/images/toldo2.jpg' },
    { id: 'toldo3', nombre: 'Toldo Deluxe', precio: '350€', imagen: '/images/toldo3.jpg' }
];

export async function getStaticPaths() {
    return productos.map((producto) => ({
        params: { pagina: producto.id },
        props: { producto }
    }));
}

const { producto } = Astro.props;
---

<PaginaInicial {...producto} />
