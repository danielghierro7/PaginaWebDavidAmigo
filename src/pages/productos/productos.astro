
---
import { productos } from '../../data/productos.js';
import ToldoCard from '../../components/paginaInicial.astro';

import PaginaInicial from "../../components/paginaInicial.astro";
---

<html>
<head>
    <title>Productos - Toldos David</title>
</head>
<body class="bg-gray-100">
<h1 class="text-3xl font-bold text-center mt-8 mb-4">Nuestros Toldos</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto p-4">
    {productos.map((producto) => (
            <PaginaInicial {...producto} />
    ))}
</div>
</body>
</html>
